{
    "manifest_version": 2,
    "name": "PMCA",
    "version": "0.0.1",
    "author": "Haolin Zhong",
    "description": "PMCA tracks your LeetCode progress and formulate review plans for you.",
    "homepage_url": "https://github.com/HaolinZhong/PMCA",
    "icons": {
        "128": "assets/logo2.png",
        "48": "assets/logo2.png",
        "16": "assets/logo2.png"
    },
    "browser_action": {
        "default_icon": "assets/logo2.png",
        "default_popup": "popup.html"
    },
    "background": {},
    "permissions": [
        "https://leetcode.com/*",
        "https://leetcode.ccn/*",
        "tabs",
        "unlimitedStorage",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/*"
            ],
            "js": [
                "scripts/leetcode.js"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://leetcode.cn/*"
            ],
            "js": [
                "scripts/leetcodecn.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net; object-src 'self';"
}